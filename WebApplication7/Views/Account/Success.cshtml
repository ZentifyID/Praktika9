@model WebApplication7.Models.UserModel
@{
    ViewBag.Title = "Регистрация завершена";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Регистрация успешно завершена!</h2>

<div class="alert alert-success">
    <strong>Поздравляем!</strong> Вы успешно зарегистрировались.
</div>

<div class="user-info">
    <h4>Ваши данные:</h4>
    <p><strong>Имя:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<div>
    @Html.ActionLink("Вернуться на главную", "Index", "Home", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Зарегистрировать еще одного пользователя", "Create", null, new { @class = "btn btn-default" })
</div>